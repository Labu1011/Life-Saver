<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
    >
      <TextView
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:text="Donate Blood, Save Lives"
          android:textStyle="bold"
          android:textSize="35sp"
          android:textColor="#2e2e2e" />
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical"
        >
        <Button
            android:id="@+id/myProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textSize="12sp"
            android:backgroundTint="@color/material_dynamic_neutral30"
            />
        <Button
            android:id="@+id/logout"
            android:layout_width="50dp"
            android:layout_gravity="end"
            android:layout_marginLeft="35dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_500"
            android:drawableEnd="@drawable/baseline_logout_24" />
      </LinearLayout>

  </LinearLayout>



  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/centerLine"
      android:layout_centerInParent="true" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
    android:weightSum="2"

      android:layout_above="@id/centerLine"
      android:orientation="horizontal"
     android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
  >
    <Button
        android:id="@+id/findDonor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingHorizontal="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="35dp"
        android:drawableTop="@drawable/baseline_search_24"
        android:layout_marginRight="5dp"
        android:textSize="15sp"
        android:text="Find Donor"
        />
    <Button
        android:id="@+id/updateDonationBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1"
        android:textSize="15sp"
        android:drawableTop="@drawable/baseline_insert_drive_file_24"
        android:layout_marginLeft="5dp"
        android:text="Update Donation"
        />
  </LinearLayout>

  <LinearLayout
      android:id="@+id/row2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="2"
      android:layout_below="@id/centerLine"
      android:orientation="horizontal"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      >
    <Button
        android:id="@+id/donorList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_view_list_24"
        android:paddingHorizontal="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="32dp"
        android:layout_marginRight="5dp"
        android:text="Donor List"
        />
    <Button
        android:id="@+id/bloodBankList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_bloodtype_24"
        android:layout_marginLeft="5dp"
        android:text="Blood Bank \n List"
        />
  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:weightSum="2"
      android:layout_below="@id/row2"
      android:orientation="horizontal"
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      >
    <Button
        android:id="@+id/faq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="20dp"
        android:layout_marginRight="5dp"
        android:drawableTop="@drawable/baseline_question_mark_24"
        android:text="FAQs"
        android:textSize="15sp"
        />
    <Button
        android:id="@+id/aboutUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_weight="1"
        android:drawableTop="@drawable/baseline_supervisor_account_24"
        android:layout_marginLeft="5dp"
        android:text="About Us"
        />
  </LinearLayout>

  <RelativeLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:gravity="bottom"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Life Saver v2.0"
        android:paddingVertical="5dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
      />
  </RelativeLayout>
</RelativeLayout>